// Prisma schema with pgvector support
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  conversations Conversation[]
  memories      UserMemory[]
  context       UserContext?

  @@map("users")
}

model Conversation {
  id        String   @id @default(uuid())
  userId    String
  title     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]

  @@map("conversations")
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  sender         MessageSender
  content        String       @db.Text
  createdAt      DateTime     @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@map("messages")
}

enum MessageSender {
  USER
  ASSISTANT
}

model KnowledgeChunk {
  id          String   @id
  text        String   @db.Text
  metadata    Json?
  embedding   Unsupported("vector(1536)") // text-embedding-3-small
  source      String?
  lesson      String?
  order       Int?
  tags        String[]
  file_path   String?
  chunk_index Int?
  content_hash String?
  updated_at  DateTime?
  createdAt   DateTime @default(now())

  @@map("knowledge_chunks")
}

model UserMemory {
  id         String        @id @default(uuid())
  userId     String
  summary    String        @db.Text
  embedding  Unsupported("vector(1536)") // text-embedding-3-small
  memoryType String        @default("ACTIVE_CONVERSATION")
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, memoryType])
  @@map("user_memories")
}

// NextAuth.js models
model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// User Context - stores personalized context for each user
model UserContext {
  id        String   @id @default(uuid())
  userId    String   @unique
  context   String   @db.Text // JSON string with user's personal context
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_contexts")
}

